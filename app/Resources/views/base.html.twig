<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="../../favicon.ico">

        <title>{% block title %}Welcome!{% endblock %}</title>

        <!-- Bootstrap core CSS -->
        <link rel="stylesheet"
              href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <!-- Custom styles for this template -->
        {#{<link rel="stylesheet"
                 href="{{ asset('assets/vendor/bootstrap/dist/css/starter-template.css') }}">}#}
        <!-- Bootstrap Core CSS -->


        <!-- Custom CSS -->
        <link href="{{asset('css/grayscale.css')}}" rel="stylesheet">

    {% block estilos %}{% endblock %}
    <!-- Custom Fonts para grey scale -->
    <link href="{{asset('font-awesome/css/font-awesome.min.css')}}" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">


{% block fonts %}{% endblock %}
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}

    {% block navbar %}
        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">

            <div class="container">

                <div class="navbar-header">
                    <a class="navbar-brand page-scroll" href="#page-top">
                        <span class="light">Torneo Raza: ultimate fresbee bahia blanca</span>
                    </a>
                </div>
                <!-- Links y acciones -->
                <div class="collapse navbar-collapse navbar-right navbar-main-collapse"">

                    {% block navList %}
                        <ul class="nav navbar-nav">
                            <!-- li que se esconde cuando scrolleas -->
                            <li class="hidden">
                                <a href="#page-top"></a>
                            </li>
                            <li>
                                <a class="page-scroll"  href="{{path('mostrarTodos')}}">Partidos</a>
                            </li>
                            <li >
                                <a class="page-scroll"  href="{{path('mostrarEquipos')}}">Equipos Participantes</a>
                            </li>
                            <li>
                                <a class="page-scroll"  href="{{path('mostrarJugadores')}}">Jugadores</a>
                            </li>
                            <li >
                                <a  class="page-scroll" href="{{path('tablaPosiciones')}}">Tabla</a>
                            </li>

                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <li>
                                    <a   class=" page-scroll" href="{{ path('logout') }}">Logout</a>
                                </li>
                            {% else %}
                                <li>
                                    <a class=" page-scroll" href="{{ path('loginForm') }}">Login</a>
                                </li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a   class=" page-scroll" href="{{ path('adminPage') }}">
                                        <i class="fa fa-lock"></i> {{ 'Menu administrador'|trans }}
                                    </a>
                                </li>
                            {% endif %}

                            {% if is_granted('ROLE_EDITOR') %}
                                <li>
                                    <a class=" page-scroll" href="{{ path('editorPage') }}">
                                        <i class="fa fa-lock"></i> {{ 'Menu editor'|trans }}
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    {% endblock %}

                </div>
                <!--/.nav-collapse -->
            </div>
        </nav>


    {% endblock %} 


{% block body %}{% endblock %}


<!-- Footer -->
<footer>
    <div class="container text-center col-md-8 col-md-offset-2">
        <p>Copyright &copy; Autores: Koll-Larrieu</p>
    </div>
</footer>

