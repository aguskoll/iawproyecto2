{% extends '/default/admin.html.twig' %}

{% block body %}

    <table border="1" >
        <ul id="navigation">
        {% if partidos is empty%}
          No hay partidos
          {% else %}
            {% for p in partidos %}
                 <tr>
                     <td>     Equipo1: {{ p.getEquipo1().getNombre() }}</td>
                      <td>    Equipo2: {{ p.getEquipo2().getNombre()  }} </td>
                       <td><select id='{{p.getId}}' onchange= 'select(this.id, this.value)'>
                       	{% for e in editores %}
 						<option value='{{ e.getId() }}'>{{ e.getUsername() }}</option>
                       			{% endfor %}
                       </select>
                        </td>
                        <td>
                          <a id='r_{{p.getId}}' href='{{ path('vincularEditor', {'idPartido': p.getId(), 'idEditor': editores|first.getId}) }}' onclick="return confirm('Asignar editor al partido?')">asignar</a>
                        </td>
                 </tr>
            {% endfor %}
            {% endif %}
        </ul>
 </table>
{% endblock %}