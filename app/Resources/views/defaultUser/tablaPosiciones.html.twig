{% extends 'base.html.twig' %}
{% block body %}
   
  <section id="about" class="container content-section text-center">
     <div class="row">   
          <div class="col-lg-8 col-lg-offset-2">    
            <h2>Tabla de posiciones:</h2>
            <div class="table-responsive">
               <table class="table ">
                        <thead>     
                             <tr>
                                <th><strong>Equipo</strong></th>
                                <th><strong>Partidos ganados</strong></th>
                                <th><strong>Partidos jugados</strong></th>
                                <th><strong>Goles convertidos</strong></th>
                              </tr>
                             </thead>    
                <tbody> 
                    {% if equipos is empty %}
                     {{'no hay equipos cargados'}}   
        {% else %}    
            {% for e in equipos%}

                     <tr>
                         <td>   
                            {{ e.getNombre() }}  
                         </td>
                         <td> 
                            {{e.getPartidosGanados()}}
                          </td> 
                         <td>
                             {{e.getPartidosJugados()}}
                          </td>
                          <td>
                             {{e.getGoles()}}
                          </td>
                     </tr>
                {% endfor %}
               {% endif %} 
                    </tbody>
                 </table> 
              </div>  
          </div>    
    </div>
</section>       
            
        
{%endblock%}