{# empty Twig template #}
{% extends 'base.html.twig' %}

{% block body %}
    
    
    
  
   <section id="about" class="container content-section text-center">
     <div class="row">   
          <div class="col-lg-8 col-lg-offset-2">
                <h2>Jugadores:</h2>
                    <div class="table-responsive">
                        <table class="table ">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Equipo</th>
                                    <th>Puntos</th>
                                    <th>Asistencias</th>
                                    <th> Defensas </th>
                                </tr>    
                            </thead>    
                         <tbody> 
                           {% if jugadores is empty %}
                             {{'no hay jugadores cargados'}}   
                        {% else %}    
                                    {% for j in jugadores %}

                                     <tr>     
                                                <td>{{j.getNombre()}}</td>
                                                 <td> {{ j.getEquipo().getNombre()}}</td> 
                                                 <td> {{ j.getPuntos()}}</td>
                                                 <td> {{ j.getAsistencias()}}</td>
                                                 <td> {{ j.getDefensas()}}</td>
                                     </tr>
                                {% endfor %}
                           {% endif %} 
                     </tbody>
                 </table> 
              </div>  
          </div>    
    </div>
</section>       
            
{% endblock %}
