		<div class="col-lg-8 col-lg-offset-2">
            {% if app.session.flashBag.has('success') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('success') %}
                    {{ msg }}
                {% endfor %}
            </div>
            {% endif %}
            <h2>Welcome admin</h2>

            <a href="{{path('crearFixture')}}" class="btn btn-sq-lg btn">
            <i class="fa fa-calendar fa-5x"></i><br/><br>
            Crear fixture
            </a>

            <a href="{{path('editarPartidos')}}" class="btn btn-sq-lg btn">
            <i class="fa fa-pencil fa-5x"></i><br/><br>
            editar partidos
            </a>

		</div>
 	</div>
</section>
{% endblock %}