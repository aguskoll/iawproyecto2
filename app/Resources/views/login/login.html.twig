{% extends 'base.html.twig' %}

{% block estilos %}
    {{ parent() }}
    <link href="{{ asset('css/login-style.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
<section id="login" class="container content-section text-center">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>Iniciar sesi√≥n</h2>
            {% if error %}
                <div class="error">{{ error.message|trans }}</div>
            {% endif %}
            <div class="im-centered row">
              <form action="{{ path('loginCheck') }} "method="post">
                <input type="text" id="username" name="_username" placeholder="User/Mail" value="{{ last_username }}" required="required" class="input-txt"/>

                <input type="password" id="password" name="_password" placeholder="Password" required="required" class="input-txt"/>

                    <button type="submit" class="btn-default btn-lg movido">Send </button>
              </form>
        </div>
    </div>
</section>
{% endblock %}